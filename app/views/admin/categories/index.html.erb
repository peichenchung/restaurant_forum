<div class="container">

  <h2>餐廳分類總表</h2>

  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>

  <div class="col-md-12">

    <table class="table table-striped table-bordered">
      <tr>
        <th>#</th>
        <th>Category Name</th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
      </tr>
      <% end %><%# 勿忘!! %>
    </table>

  </div>

</div>
