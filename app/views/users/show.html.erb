<div class="container">
  <table class="table table-striped table-bordered">
    <tr>
      <td rowspan="4" class="col-md-4">
        <% if @user.avatar? %>
          <%= image_tag @user.image.url, width: '350px' %>
        <% else %>
          <%= image_tag ("800x600.png"), width: '350px' %>
        <% end %>
      </td>
      <td>
        <% if @user.name? %>
          <%= @user.name %>
        <% else %>
          <h4>User Name</h4>
        <% end %>
      </td>
    </tr>
      <td class="text-muted"><%= @user.email %></td>
    </tr>
    <tr>
      <td>
        <% if @user.intro? %>
          <%= simple_format(@user.intro) %>
        <% else %>
          <p><em>About me...</em></p>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %>
      </td>
    </tr>
  </table>
</div>